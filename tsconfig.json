{
  "compilerOptions": {
    "resolveJsonModule": true,
    "target": "ES2022",
    "module": "Node16",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "baseUrl": "./",
    "paths": {
      "$src/*": ["src/*"],
      "$utils/*": ["src/utils/*"],
      "$LOGGER": ["src/utils/logger.ts"],
    }
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}
